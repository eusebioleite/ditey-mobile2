<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/shape"
            android:layout_width="133dp"
            android:layout_height="70dp"
            android:scaleType="fitStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/shape_play_stop" />

        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="55dp"
            android:layout_height="46dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/shape"
            app:layout_constraintEnd_toEndOf="@+id/shape"
            app:layout_constraintStart_toStartOf="@+id/shape"
            app:layout_constraintTop_toTopOf="@+id/shape"
            app:srcCompat="@drawable/ic_play" />

        <ImageButton
            android:id="@+id/stop_button"
            android:layout_width="55dp"
            android:layout_height="46dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/shape"
            app:layout_constraintEnd_toEndOf="@+id/shape"
            app:layout_constraintStart_toStartOf="@+id/shape"
            app:layout_constraintTop_toTopOf="@+id/shape"
            app:srcCompat="@drawable/ic_stop" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/edtMainTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_maintitle"
        android:breakStrategy="simple"
        android:ems="10"
        android:fontFamily="@font/montserrat_bold"
        android:hint="Seu tÃ­tulo aqui..."
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/mainEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autofillHints="Digite seu texto aqui..."
        android:background="@drawable/shape_mainedt"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:foregroundGravity="top"
        android:gravity="start|top"
        android:hint="Digite seu texto aqui..."
        android:inputType="textMultiLine"
        android:textColorHint="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>